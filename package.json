{
  "name": "inputleap-code",
  "version": "1.0.0",
  "description": "跨平台键鼠共享系统 - 支持Windows和Mac之间的键鼠共享、剪贴板同步和文件传输",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "dist": "electron-builder --publish=never",
    "test": "jest"
  },
  "keywords": [
    "mouse",
    "keyboard",
    "sharing",
    "cross-platform",
    "synergy",
    "clipboard",
    "file-transfer"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "jest": "^29.7.0"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "ws": "^8.14.2",
    "robotjs": "^0.6.0",
    "bonjour-service": "^1.1.1",
    "clipboard": "^2.0.11",
    "node-machine-id": "^1.1.12"
  },
  "build": {
    "appId": "com.inputleap.code",
    "productName": "InputLeap Code",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}